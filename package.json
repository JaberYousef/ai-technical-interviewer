{
  "name": "ai-interviewer-coach",
  "version": "1.0.0",
  "description": "An AI-powered technical interview practice platform that provides realistic recruiter-like interactions with code-aware feedback.",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces",
    "build": "npm run build --workspaces",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "npm run typecheck --workspaces",
    "prepare": "husky install"
  },
  "keywords": [
    "ai",
    "interview",
    "coach",
    "leetcode",
    "technical-interview"
  ],
  "author": "Yousef Jaber",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JaberYousef/ai-technical-interviewer.git"
  },
  "bugs": {
    "url": "https://github.com/JaberYousef/ai-technical-interviewer/issues"
  },
  "homepage": "https://github.com/JaberYousef/ai-technical-interviewer#readme",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.1.2",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
